@page "/add-resource-cache"
@attribute [Authorize]

<PageTitle>Add ResourceCache</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save ResourceCache</RadzenAlert>
        <RadzenTemplateForm TItem="CrownATTime.Server.Models.ATTime.ResourceCache" Data="@(resourceCache)" Visible="@(resourceCache != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Id" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(resourceCache.Id)" Name="Id" AutoCompleteType="AutoCompleteType.Off"/>
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Id" Text="Id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Email" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(resourceCache.Email)" Name="Email" AutoCompleteType="AutoCompleteType.Off" MaxLength="255" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="First Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(resourceCache.FirstName)" Name="FirstName" AutoCompleteType="AutoCompleteType.Off" MaxLength="255" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Last Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(resourceCache.LastName)" Name="LastName" AutoCompleteType="AutoCompleteType.Off" MaxLength="255" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Full Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(resourceCache.FullName)" Name="FullName" AutoCompleteType="AutoCompleteType.Off" MaxLength="255" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Active" Component="IsActive" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.IsActive)" Name="IsActive" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="Office Extension" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(resourceCache.OfficeExtension)" Name="OfficeExtension" AutoCompleteType="AutoCompleteType.Off" MaxLength="50" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Office Phone" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(resourceCache.OfficePhone)" Name="OfficePhone" AutoCompleteType="AutoCompleteType.Off" MaxLength="50" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Resource Type" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(resourceCache.ResourceType)" Name="ResourceType" AutoCompleteType="AutoCompleteType.Off" MaxLength="255" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="User Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(resourceCache.UserName)" Name="UserName" AutoCompleteType="AutoCompleteType.Off" MaxLength="255" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="License Type" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(resourceCache.LicenseType)" Name="LicenseType" AutoCompleteType="AutoCompleteType.Off"/>
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Checklist Items Collapsed" Component="ChecklistItemsCollapsed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.ChecklistItemsCollapsed)" Name="ChecklistItemsCollapsed" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Email Notes Collapsed" Component="EmailNotesCollapsed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.EmailNotesCollapsed)" Name="EmailNotesCollapsed" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Company Details Collapsed" Component="CompanyDetailsCollapsed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.CompanyDetailsCollapsed)" Name="CompanyDetailsCollapsed" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Aichat Collapsed" Component="AichatCollapsed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.AichatCollapsed)" Name="AichatCollapsed" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Contact Details Collapsed" Component="ContactDetailsCollapsed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.ContactDetailsCollapsed)" Name="ContactDetailsCollapsed" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Rocketship Collapsed" Component="RocketshipCollapsed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.RocketshipCollapsed)" Name="RocketshipCollapsed" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Device Details Collapsed" Component="DeviceDetailsCollapsed" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.DeviceDetailsCollapsed)" Name="DeviceDetailsCollapsed" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Hide Time Details" Component="HideTimeDetails" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(resourceCache.HideTimeDetails)" Name="HideTimeDetails" />
                </RadzenColumn>
            </RadzenRow>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

