
@page "/time-entries"

@attribute [Authorize]

<PageTitle>TimeEntries</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Time Entries" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(timeEntries)" LoadData="@Grid0LoadData" Count="@count" TItem="CrownATTime.Server.Models.ATTime.TimeEntry" RowSelect="@EditRow" IsLoading="@gridLoading" Responsive="true">
            <Columns>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Property="TicketId" Frozen="true" Width="150px">
                                    <Template>
                                        <RadzenStack>
                                <RadzenLink Text="Open Time Entry" Path="@($"TimeEntry/{context.TicketId}")" Target="_blank" Icon="open_in_browser" @onclick:stopPropagation="true"></RadzenLink>
                                        </RadzenStack>
                                    </Template>
                                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Property="TimeStampStatus" Title="Timer" Width="125px">
                    <Template>
                        <RadzenStack JustifyContent="Radzen.JustifyContent.Center">
                            <RadzenBadge Text="Running" Variant="Radzen.Variant.Outlined" BadgeStyle="Radzen.BadgeStyle.Success" Style="width: 70px" IsPill="true" Visible="@context.TimeStampStatus"></RadzenBadge>
<RadzenBadge Text="Stopped" Variant="Radzen.Variant.Outlined" BadgeStyle="Radzen.BadgeStyle.Danger" Style="width: 70px" IsPill="true" Visible="@(!context.TimeStampStatus)"></RadzenBadge>
                        </RadzenStack>
                    </Template>
                                                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Property="TicketNumber" Title="Ticket Number">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Property="TicketTitle" Title="Title" Width="300px">
                                    <Template>
                                        <RadzenStack>
                                            <RadzenLabel Text="@context.TicketTitle" Style="text-wrap: auto;" />
                                        </RadzenStack>
                                    </Template>
                                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Property="DateWorked" Title="Date Worked" FormatString="{0:g}">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Property="HoursWorked" Title="Hrs Worked" Width="150px">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Property="SummaryNotes" Title="Summary Notes">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Property="InternalNotes" Title="Internal Notes">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.TimeEntry" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center" Frozen="true" FrozenPosition="Radzen.FrozenColumnPosition.Right">
                    <Template Context="timeEntry">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, timeEntry)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
            <HeaderTemplate>
                <RadzenStack Orientation="Radzen.Orientation.Horizontal" AlignItems="Radzen.AlignItems.Center">
                    <RadzenButton Icon="refresh" Variant="Radzen.Variant.Outlined" Style="width: 40px" Click="@RefreshButtonClick"></RadzenButton>
                    <RadzenLabel Text="My Time Entries:" />
                    <RadzenSwitch @bind-Value="@MyTimeEntriesFilter" Name="MyTimeEntriesFilter" Change="@MyTimeEntriesFilterChange"></RadzenSwitch>
                </RadzenStack>
            </HeaderTemplate>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
