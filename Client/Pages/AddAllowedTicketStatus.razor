@page "/add-allowed-ticket-status"

@attribute [Authorize]

<PageTitle>Add AllowedTicketStatus</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save AllowedTicketStatus</RadzenAlert>
        <RadzenTemplateForm TItem="CrownATTime.Server.Models.ATTime.AllowedTicketStatus" Data="@(allowedTicketStatus)" Visible="@(allowedTicketStatus != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Ticket Status Id" Variant="Variant.Outlined">
                  <ChildContent>
                      <RadzenDropDown TValue="int" ValueProperty="ValueInt" TextProperty="Label" Data="@ticketEntityPicklistValueCaches" LoadData="@ticketEntityPicklistValueCachesLoadData" Count="@ticketEntityPicklistValueCachesCount" @bind-Value="@allowedTicketStatus.TicketStatusId" Name="TicketStatusId" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="TicketStatusId" Text="TicketStatusId is required" />
                  </Helper>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

