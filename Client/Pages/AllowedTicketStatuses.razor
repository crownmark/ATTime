@page "/allowed-ticket-statuses"
@attribute [Authorize]

<PageTitle>AllowedTicketStatuses</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="AllowedTicketStatuses" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true"  AllowPaging="true" PagerAlwaysVisible="true"  AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@([5, 10, 20, 30]) 
            Data="@(allowedTicketStatuses)" LoadData="@Grid0LoadData" Count="@count" TItem="CrownATTime.Server.Models.ATTime.AllowedTicketStatus" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.AllowedTicketStatus" Property="AllowedTicketStatusId" Title="Allowed Ticket Status Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.AllowedTicketStatus" Property="TicketStatusId" Title="Ticket Status Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.AllowedTicketStatus" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="allowedTicketStatus">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, allowedTicketStatus)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
