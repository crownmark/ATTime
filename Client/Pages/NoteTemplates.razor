@page "/note-templates"

@attribute [Authorize]

<PageTitle>NoteTemplates</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Note Templates" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(noteTemplates)" LoadData="@Grid0LoadData" Count="@count" TItem="CrownATTime.Server.Models.ATTime.NoteTemplate" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.NoteTemplate" Property="Active" Title="Active">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.NoteTemplate" Property="Title" Title="Title">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.NoteTemplate" Property="NoteTitle" Title="Note Title">
                                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.NoteTemplate" Property="TicketStatus" Title="Ticket Status">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="CrownATTime.Server.Models.ATTime.NoteTemplate" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center" Frozen="true">
                    <Template Context="noteTemplate">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, noteTemplate)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
